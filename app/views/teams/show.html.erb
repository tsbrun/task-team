<h1><%= @team.name %></h1>

<h2>Team Goal: <%= @team.goal %></h2>

<h2>Team Members</h2>
<ul>
<% @team.users.each do |user| %>
  <li><%= "#{user.first_name} #{user.last_name}" %></li>
<% end %>
</ul>

<h3>Your Lists</h3>
<ul>
<% @team.lists.each do |list| %>
  <li><%= list.title %></li>
  <ul>
  <% list.tasks.each do |task| %>
    <li><%= task.desc %></li>
  <% end %>
  </ul>
<% end %>
</ul>

<%= link_to "Create a List", new_team_list_path(@team) %>

